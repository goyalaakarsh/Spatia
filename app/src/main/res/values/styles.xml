<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainFont">
        <item name="android:fontFamily">@fonts/dmsans</item>
    </style>
    
    <style name="CounterButton">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">0dp</item>
    </style>
    
    <!-- Primary Button Style -->
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/primary_dark</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>