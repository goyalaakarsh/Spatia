<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="CounterButton">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">0dp</item>
    </style>
    
    <!-- Primary Button Style -->
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/primary_dark</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Button style -->
    <style name="rounded_corner_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:backgroundTint">@color/primary_light</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Profile Menu Item Style -->
    <style name="ProfileMenuItem">
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.Spatia.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>