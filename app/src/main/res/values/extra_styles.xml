<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text style -->
    <style name="MainFont">
        <item name="android:fontFamily">@fonts/dmsans</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Button style -->
    <style name="rounded_corner_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:backgroundTint">@color/primary_light</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>